---
import { Font } from "astro:assets";

export interface Props {
  title: string;
  description: string;
  ogTitle?: string;
  ogDescription?: string;
  image?: string;
}

const themeColor = "#032164";
const colorScheme = "light";
const sitename = "GLOBAL - Biuro rachunkowe";

if ([themeColor, colorScheme, sitename].includes("unset"))
  throw new Error("\n ‚ùå SET DATA IN `Head.astro`!");

const {
  title,
  description,
  ogTitle = title,
  ogDescription = description,
  image = new URL("/og-image.png", Astro.site),
} = Astro.props;

const canonical = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : undefined;
---

<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonical} />

<!-- Open Graph -->
<meta property="og:title" content={ogTitle} />
<meta property="og:description" content={ogDescription} />
<meta property="og:type" content="website" />
<meta property="og:url" content={canonical} />
<meta property="og:image" content={image} />
<meta property="og:site_name" content={sitename} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={ogTitle} />
<meta name="twitter:description" content={ogDescription} />
<meta name="twitter:image" content={image} />

<meta name="color-scheme" content={colorScheme} />
<meta name="theme-color" content={themeColor} />

<slot />
<!-- <ClientRouter /> -->
<Font cssVariable="--font-manrope" preload />
<Font cssVariable="--font-syne" />
