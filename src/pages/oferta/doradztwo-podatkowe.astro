---
import Head from "@/layouts/Head.astro";
import RootLayout from "@/layouts/RootLayout.astro";
import OfferHero from "@/sections/offer/OfferHero.astro";
import OfferServices from "@/sections/offer/OfferServices.astro";
import OfferPricing from "@/sections/offer/OfferPricing.astro";
import OfferProcess from "@/sections/offer/OfferProcess.astro";
import OfferForm from "@/sections/offer/OfferForm.astro";
import { offerData } from "@/data/offer";

const data = offerData.doradztwoPodatkowe;
---

<RootLayout>
	<Head
		slot="head"
		title="Doradztwo Podatkowe | Biuro Rachunkowe Global"
		description="Skuteczne doradztwo podatkowe dla firm. Optymalizacja podatkowa, opinie i interpretacje, audyt podatkowy. Inteligentne strategie podatkowe dla Twojego biznesu."
	/>
	<main class="space-y-24">
		<OfferHero {...data.hero} scrollTargetId="zakres-uslug" />
		<OfferServices {...data.services} />
		<OfferPricing {...data.pricing} />
		<OfferProcess {...data.process} />
		<OfferForm {...data.form} />
	</main>
</RootLayout>
