---
import {
  buttonVariants,
  type ButtonVariantProps,
} from "@/component-variants/button";
import type { HTMLTag, Polymorphic } from "astro/types";
const buttonTags = ["button", "a"] satisfies HTMLTag[];
type ButtonTag = (typeof buttonTags)[number];

type Props<Tag extends ButtonTag = "button"> = Polymorphic<{ as: Tag }> &
  ButtonVariantProps;

const {
  as: Tag = "button",
  variant,
  size,
  class: className,
  ...props
} = Astro.props;
---

<Tag class:list={[buttonVariants({ variant, size }), className]} {...props}>
  <slot />
</Tag>
