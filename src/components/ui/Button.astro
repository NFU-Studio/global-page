---
import { buttonVariants } from "@/components/ui/button";
import type { HTMLTag, Polymorphic } from "astro/types";
import type { VariantProps } from "class-variance-authority";
const buttonTags = ["button", "a"] satisfies HTMLTag[];
type ButtonTag = (typeof buttonTags)[number];

type Props<Tag extends ButtonTag = "button"> = Polymorphic<{ as: Tag }> &
  VariantProps<typeof buttonVariants>;

const {
  as: Tag = "button",
  variant,
  size,
  class: className,
  ...props
} = Astro.props;
---

<Tag class:list={[buttonVariants({ variant, size }), className]} {...props}>
  <slot />
</Tag>
