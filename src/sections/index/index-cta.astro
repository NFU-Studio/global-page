---
import ArrowRightAnim from "@/components/ui/arrow-right-anim.astro";
import Button from "@/components/ui/Button.astro";
import Typography from "@/components/ui/Typography.astro";
import * as m from "@/paraglide/messages";
---

<section class="p-rws *:p-rws bg-accent text-background" data-inverted="true">
  <div class="flex flex-col *:w-fit gap-6 lg:gap-12">
    <Typography variant={"h2"} as="h2">
      {m.zany_frail_mantis_bloom()}
    </Typography>
    <Typography mw="h">
      {m.awake_hour_starfish_favor()}
    </Typography>
    <Button variant="secondary" as="a" href="/cennik/">
      {m.last_dark_warthog_race()}
      <ArrowRightAnim />
    </Button>
  </div>
</section>
