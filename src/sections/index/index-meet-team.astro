---
import teamImg from "@/assets/imgs/team-placeholder.jpg";
import ArrowRightAnim from "@/components/ui/arrow-right-anim.astro";
import Button from "@/components/ui/Button.astro";
import Typography from "@/components/ui/Typography.astro";
import * as m from "@/paraglide/messages";
import { Image } from "astro:assets";
---

<section class="grid p-rws gap-rws lg:grid-cols-2">
  <div class="grid place-content-center gap-8 p-rws">
    <header>
      <Typography
        as="h2"
        variant={"h2"}
        set:text={m.arable_simple_gecko_hug()}
      />
    </header>
    <Typography mw="p" set:text={m.loved_frail_platypus_create()} />
    <Button
      class={"w-fit"}
      as="a"
      href="/o-nas/"
      set:text={m.fine_tired_walrus_imagine()}>
      <ArrowRightAnim />
    </Button>
  </div>
  <div class="relative w-fit max-w-lg mx-auto *:rounded-md">
    <Image
      src={teamImg}
      alt="PLACEHOLDER"
      class="object-contain [--ppp:1rem] lg:[--ppp:2rem] w-fit lg:max-h-[65vh] drop-shadow-[var(--ppp)_var(--ppp)_0px_var(--color-primary)]"
    />
    <div
      class="absolute z-1 bg-linear-0 from-accent/50 to-primary mask-t-from-0% inset-0">
    </div>
  </div>
</section>
