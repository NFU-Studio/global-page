---
import Typography from "@/components/ui/Typography.astro";
import * as m from "@/paraglide/messages";
const testimonials = [
  m.round_small_tuna_animate(),
  m.smart_free_donkey_greet(),
  m.bland_late_coyote_roam(),
];
---

<section class="p-rws relative z-0">
  <header class="p-rws">
    <Typography
      as="h2"
      variant={"h2"}
      set:text={m.true_spare_crocodile_gulp()}
    />
  </header>
  <div class="grid 2xl:grid-cols-3 md:grid-cols-2 gap-rws p-rws">
    {
      testimonials.map((text, i) => (
        <blockquote
          class:list={[
            i === 2 && "md:col-span-2 2xl:col-span-1",
            "bg-muted border [&_span]:text-5xl [&_span]:font-bold [&_span]:text-accent",
            "flex flex-col justify-center p-4 lg:p-8 rounded-md",
          ]}>
          <span>“</span>
          <Typography as="p" variant={"quote"} set:text={text} />
          <span class="ml-auto">”</span>
        </blockquote>
      ))
    }
  </div>
</section>
