---
import c0 from "@/assets/imgs/hero.jpg";
import wroImg from "@/assets/imgs/wro.jpg";
import Typography from "@/components/ui/Typography.astro";
import * as m from "@/paraglide/messages";
import { Image } from "astro:assets";
const fodders = [
  {
    img: {
      src: c0,
      alt: "PLACEHOLDER",
    },
    h2: m.round_quiet_ant_loop(),
    paragraphs: [
      m.minor_shy_moth_pet(),
      m.minor_raw_parrot_rest(),
      "Nasze biuro działa transparentnie, terminowo i zgodnie z aktualnymi przepisami, zapewniając bezpieczeństwo podatkowe i pełen komfort współpracy. To dlatego klienci zostają z nami na lata.",
    ],
  },
  {
    img: {
      src: wroImg,
      alt: m.level_lost_crossbill_exhale(),
    },
    h2: m.lost_crisp_mallard_climb(),
    paragraphs: [m.best_minor_felix_play()],
  },
  {
    img: {
      src: c0,
      alt: "PLACEHOLDER",
    },
    h2: m.curly_swift_pigeon_advise(),
    paragraphs: [m.swift_short_cow_drop()],
  },
];
---

<section class="p-rws gap-rws flex flex-col">
  {
    fodders.map(({ h2, img, paragraphs }, i) => (
      <article class="p-rws grid lg:grid-cols-2 gap-rws">
        <div class="space-y-12">
          <header>
            <Typography mw="h" as="h2" variant="h3" set:html={h2} />
          </header>
          <div class="space-y-4">
            {paragraphs.map((t) => (
              <Typography mw="p" set:html={t} />
            ))}
          </div>
        </div>
        <div
          class:list={["grid place-content-center", i % 2 && "lg:order-first"]}>
          <Image
            sizes={"(max-width: 1024px) 90vw, 35vw"}
            widths={[200, 400, 600, 800]}
            {...img}
            class={
              "object-contain max-w-[90%] sm:max-w-lg max-h-[75vh] drop-shadow-[2rem_2rem_0_var(--color-primary)]"
            }
          />
        </div>
      </article>
    ))
  }
</section>
