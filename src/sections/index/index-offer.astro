---
import { AnimatedAccodrionish } from "@/components/ui/animated-accordionish";
import Typography from "@/components/ui/Typography.astro";
import * as m from "@/paraglide/messages";
---

<section class="p-rws">
  <header class="space-y-5 p-rws">
    <h2 class="sr-only">
      {m.aloof_nice_cockroach_dazzle()}
    </h2>
    <Typography variant="h2">
      {m.caring_tame_ray_sing()}
    </Typography>
    <Typography mw="h" class={"text-balance"}>
      {m.cozy_upper_oryx_spur()}
    </Typography>
  </header>
  <AnimatedAccodrionish client:visible />
</section>

