---
import { PricingCalculatorForm } from "@/components/features/pricing-calculator/pricing-calculator-form";
import Typography from "@/components/ui/Typography.astro";
---

<section class="p-rws space-y-rws overflow-x-hidden">
  <header>
    <Typography variant={"h2"} as="h2">
      Otrzymaj indywidualną wycenę
    </Typography>
  </header>
  <div class="relative">
    <div
      class:list={[
        "bg-linear-to-b from-accent to-foreground absolute left-0 lg:w-[75vw] h-1/2 -translate-y-1/2 lg:left-1/4 top-1/2",
        "rounded-2xl shadow-md",
      ]}>
    </div>
    <PricingCalculatorForm client:idle />
  </div>
</section>
